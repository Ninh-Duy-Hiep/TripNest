generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role {
  GUEST
  HOST
  ADMIN
}

enum Status {
  Active
  Inactive
}

enum PropertyType {
  EntirePlace
  PrivateRoom
  SharedRoom
}

model User {
  id                 String    @id @default(uuid())
  email              String    @unique
  password           String    @db.VarChar(255)
  fullName           String    @db.VarChar(255)
  phoneNumber        String    @db.VarChar(255)
  avatar             String    @db.VarChar(255)
  role               Role      @default(GUEST)
  status             Status    @default(Active)
  identityNumber     String?   @db.VarChar(255)
  bio                String?   @db.Text
  becomeHostAt       DateTime?
  isDeleted          Boolean   @default(false)
  createdAt          DateTime  @default(now())
  updatedAt          DateTime  @updatedAt

  listings      Listings[]
  refreshTokens Refresh_Token[]

  @@index([status])
  @@index([fullName])
  @@index([role])
}

model Refresh_Token {
  id        String   @id @default(uuid())
  token     String   @db.Text
  userId    String
  expiresAt DateTime
  createdAt DateTime @default(now())

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
}

model Listings {
  id            String       @id @default(uuid())
  hostId        String
  title         String       @db.VarChar(255)
  description   String       @db.Text
  propertyType  PropertyType
  province      String       @db.VarChar(255)
  ward          String       @db.VarChar(255)
  address       String       @db.VarChar(255)
  maxGuests     Int
  bedRooms      Int
  beds          Int
  bathRooms     Int
  pricePerNight Float
  status        Status       @default(Active)
  createdAt     DateTime     @default(now())
  updatedAt     DateTime     @updatedAt

  host              User                 @relation(fields: [hostId], references: [id])
  listingsImages    Listings_Images[]
  listingsAmenities Listings_Amenities[]

  @@index([hostId])
  @@index([province])
  @@index([pricePerNight])
  @@index([province, status])
  @@index([propertyType])
}

model Listings_Images {
  id        String   @id @default(uuid())
  listingId String
  imageName String   @db.VarChar(255)
  imageUrl  String   @db.VarChar(255)
  order     Int
  createdAt DateTime @default(now())

  listing Listings @relation(fields: [listingId], references: [id])

  @@index([listingId])
}

model Listings_Amenities {
  id         String   @id @default(uuid())
  listingId  String
  amenityId  String
  customName String   @db.VarChar(255)
  createdAt  DateTime @default(now())

  listing Listings @relation(fields: [listingId], references: [id])

  @@index([listingId])
  @@index([amenityId])
}
